</aside>

{% if taxlist %}

<section class="blogroll column col-lg-12 col-6">

    {% for tax,value in taxlist['author'] %}

    <div class="tile">
        <div class="tile-icon">
            <figure class="avatar avatar-sm" data-initial="{{ site.skateboarders[tax]|split('|')|slice(1, 1)|join[:1] }}{{ site.skateboarders[tax]|split('|')|slice(0, 1)|join[:1] }}"></figure>
        </div>
        <div class="tile-content">
            <p class="tile-title">
                <a href="{{ base_url }}/quotes/author{{ config.system.param_sep }}{{ tax }}">
                    {{ site.skateboarders[tax]|split('|')|slice(1, 1)|join }} {{ site.skateboarders[tax]|split('|')|slice(0, 1)|join }}
                </a>
            </p>
            {# <p class="tile-subtitle">Earth's Mightiest Heroes joined forces to take on threats that were too big for any one hero to tackle...</p> #}
        </div>
        {# <div class="tile-action">
            <button class="btn">Contact</button>
        </div> #}
    </div>

    {% endfor %}

</section>

<aside class="blogroll-sidebar column col-lg-12 col-3">
