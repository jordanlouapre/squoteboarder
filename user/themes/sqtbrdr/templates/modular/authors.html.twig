</aside>

{% else %}

<div class="empty column col-12">
    <div class="empty-icon">
        <i class="icon icon-2x icon-flag"></i>
    </div>
    <p class="empty-title h5">No author righ now</p>
    <p class="empty-subtitle">But it will come.</p>
    <div class="empty-action">
        <a href="{{ base_url }}/quotes" class="btn btn-link">Back to Quotes</a>
    </div>
</div>

{% endif %}
