{% set theme_config = attribute(config.themes, config.system.pages.theme) %}
<!DOCTYPE html>
<html lang="{{ grav.language.getActive ?: grav.config.site.default_lang }}">
<head>
{% block head %}
    <meta charset="utf-8" />
    <title>{% if header.title %}{{ header.title|e('html') }} | {% endif %}{{ site.title|e('html') }}</title>

    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    {% include 'partials/metadata.html.twig' %}

    <link rel="icon" type="image/png" href="{{ url('theme://images/logo.svg') }}" />
    <link rel="canonical" href="{{ page.url(true, true) }}" />
    {% include 'partials/langswitcher.hreflang.html.twig' %}

    <link rel="alternate" type="application/atom+xml" title="My Feed" href="{{ page.url(true, true) }}.atom" />
    <link rel="alternate" type="application/rss+xml" title="My Feed" href="{{ page.url(true, true) }}.rss" />
    <link rel="alternate" type="application/json" title="My Feed" href="{{ page.url(true, true) }}.json" />
{% endblock head %}

{% block stylesheets %}
    {% do assets.addCss('https://unpkg.com/spectre.css/dist/spectre.min.css', 100) %}
    {% do assets.addCss('https://unpkg.com/spectre.css/dist/spectre-exp.min.css', 99) %}
    {% do assets.addCss('https://unpkg.com/spectre.css/dist/spectre-icons.min.css', 98) %}
    {% do assets.addCss('https://fonts.googleapis.com/css?family=DM+Serif+Text', 97) %}
    {% do assets.addCss('theme://css/custom.css', 96) %}
{% endblock %}

{% block javascripts %}
    {% do assets.addJs('jquery', 100) %}
{% endblock %}

{% block assets deferred %}
    {{ assets.css()|raw }}
    {{ assets.js()|raw }}
{% endblock %}
</head>
<body id="top" class="{{ page.header.body_classes }}">

<div class="page-wrapper">

{% block preheader %}
    <div id="preheader" class="hide-lg">
        <div class="container grid-xl">

            {% block preheader_navigation %}
            <nav class="navbar">

                {% block preheader_push %}
                <section class="navbar-section">

                    <div class="push-message">
                        &ldquo; <sup>The</sup> website that has skaters quoting. &rdquo;
                    </div>
                </section>
                {% endblock %}

                {% block preheader_menu %}
                <section class="navbar-section">

                    <div class="utils-menu">
                        {% include 'partials/social-networks.html.twig' %}
                        &verbar;
                        {% include 'partials/langswitcher.html.twig' %}
                    </div>
                </section>
                {% endblock %}

            </nav>
            {% endblock %}

        </div>
    </div>
{% endblock %}

{% block header %}
    <header id="header" class="header-main">
        <div class="container grid-lg">

            {% block header_navigation %}
            <nav class="navbar">

                {% block header_brand %}
                <section id="header-brand" class="navbar-section">
                    <a href="{{ home_url }}" title="{{ config.site.title }}" class="navbar-brand">
                        <img src="{{ url("theme://images/logo.svg") }}" alt="theSQUOTEBOARDER" class="navbar-logo" />
                    </a>
                    <a class="off-canvas-toggle btn btn-primary btn-action show-md" href="#mobile-menu">
                        <i class="icon icon-menu"></i>
                    </a>
                </section>
                {% endblock %}

                {% block header_menu %}
                <section id="header-menu" class="navbar-section">
                    <div class="site-menu hide-md">
                        {% include 'partials/navigation.html.twig' %}
                    </div>
                    <div class="site-search hide-md">
                        {% include 'partials/search/simplesearch_searchbox.html.twig' %}
                    </div>
                </section>
                {% endblock %}

            </nav>
            {% endblock %}

        </div>
    </header>
{% endblock %}

{% block body %}
    <div id="content">
        {% block content %}{% endblock %}
    </div>
{% endblock %}

{% block footer %}
    <footer id="footer">
        <div class="container grid-xl">

            {% block footer_top %}
            <section class="footer-top">
                {% include 'partials/footer-top.html.twig' %}
            </section>
            {% endblock %}

            {% block footer_bottom %}
            <section class="footer-bottom">
                {% include 'partials/footer-bottom.html.twig' %}
            </section>
            {% endblock %}

        </div>
    </footer>
{% endblock %}

{% block off_canvas %}
    <div class="off-canvas">

        <div id="mobile-menu" class="off-canvas-sidebar">

            <div class="mobile-menu-section search-menu">
                {% include 'partials/search/simplesearch_searchbox.html.twig' %}
            </div>

            <div class="mobile-menu-section site-menu">
                {% include 'partials/navigation.html.twig' %}
            </div>

            <div class="mobile-menu-section utils-menu">
                {% include 'partials/langswitcher.html.twig' %}
            </div>
        </div>

        <a class="off-canvas-overlay" href="#close"></a>
    </div>
{% endblock %}

{% block bottom %}
    {{ assets.js('bottom')|raw }}
{% endblock %}
